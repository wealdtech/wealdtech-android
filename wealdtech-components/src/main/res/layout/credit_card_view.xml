<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/credit_card_number_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="Card number"
        android:textAppearance="@style/TextAppearance.Design.Hint" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/credit_card_number"
        android:hint="1234-1234-1234-1234"
        android:inputType="number"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/credit_card_number_label" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/credit_card_logo"
        android:maxHeight="24dp"
        android:maxWidth="38dp"
        android:minHeight="24dp"
        android:minWidth="38dp"
        android:layout_toRightOf="@+id/credit_card_number"
        android:layout_alignTop="@+id/credit_card_number"
        android:layout_alignBottom="@+id/credit_card_number"
        android:src="@drawable/creditcard_generic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/credit_card_expiry_label"
        android:layout_below="@+id/credit_card_number"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="Expiry"
        android:textAppearance="@style/TextAppearance.Design.Hint" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/credit_card_expiry"
        android:hint="MM/YY"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/credit_card_expiry_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/credit_card_csc_label"
        android:text="CSC"
        android:layout_below="@+id/credit_card_number"
        android:layout_alignLeft="@+id/credit_card_csc"
        android:layout_alignStart="@+id/credit_card_csc"
        android:textAppearance="@style/TextAppearance.Design.Hint"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/credit_card_csc"
        android:hint="123"
        android:inputType="number"
        android:layout_alignRight="@+id/credit_card_number"
        android:layout_alignEnd="@+id/credit_card_number"
        android:layout_below="@+id/credit_card_csc_label" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/credit_card_csc_image"
        android:maxHeight="24dp"
        android:maxWidth="38dp"
        android:minHeight="24dp"
        android:minWidth="38dp"
        android:layout_toRightOf="@+id/credit_card_csc"
        android:layout_alignTop="@+id/credit_card_csc"
        android:layout_alignBottom="@+id/credit_card_csc"
        android:src="@drawable/creditcard_generic_csc" />

</merge>
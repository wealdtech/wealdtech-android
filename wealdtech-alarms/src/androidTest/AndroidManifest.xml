<manifest package="com.wealdtech.android.alarms"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:versionCode="1"
  android:versionName="1.0.0.1">

  <application
    android:allowBackup="true"
    android:label="Alarms"
    tools:replace="android:label">

    <activity android:name="com.wealdtech.android.alarms.AlarmsTestActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <service
      android:name="com.wealdtech.android.alarms.AlarmService"
      android:enabled="true" />

    <receiver android:name="com.wealdtech.android.alarms.AlarmsBootReceiver">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED" />
      </intent-filter>
    </receiver>

  </application>
</manifest>

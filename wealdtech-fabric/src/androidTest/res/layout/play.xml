<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/play_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text view 1"
            android:id="@+id/play_text_view_1"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/play_text_view_2"
            android:layout_alignStart="@+id/play_text_view_2"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text view 2"
            android:id="@+id/play_text_view_2"
            android:layout_below="@+id/play_text_view_1"
            android:layout_centerHorizontal="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press me"
            android:id="@+id/play_button_1"
            android:layout_below="@+id/play_text_view_2"
            android:layout_centerHorizontal="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persist"
            android:id="@+id/play_button_2"
            android:layout_below="@+id/play_button_1" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop persisting"
            android:id="@+id/play_button_3"
            android:layout_alignTop="@+id/play_button_2" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_edit_text_1" android:layout_below="@+id/play_button_3" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_edit_text_2" android:layout_below="@+id/play_edit_text_1" android:layout_centerHorizontal="true"/>
</RelativeLayout>
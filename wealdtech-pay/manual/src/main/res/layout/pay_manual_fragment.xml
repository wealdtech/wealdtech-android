<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <GridLayout
        android:id="@+id/pay_manual_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="10">

        <TextView
            android:id="@+id/pay_manual_person_header"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Personal details"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <TextView
            android:id="@+id/pay_manual_firstname_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="First name"
            android:layout_gravity="end|center_vertical"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/pay_manual_firstname"
            android:layout_row="1"
            android:layout_column="1"
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="fill_horizontal" />

        <TextView
            android:id="@+id/pay_manual_lastname_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Last name"
            android:layout_gravity="end|center_vertical"
            android:layout_row="2"
            android:layout_column="0"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/pay_manual_lastname"
            android:layout_row="2"
            android:layout_column="1"
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="fill_horizontal" />

        <TextView
            android:id="@+id/pay_manual_email_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email"
            android:layout_gravity="end|center_vertical"
            android:layout_row="3"
            android:layout_column="0"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/pay_manual_email"
            android:layout_row="3"
            android:layout_column="1"
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="fill_horizontal" />

        <TextView
            android:id="@+id/pay_manual_dob_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date of birth"
            android:layout_gravity="end|center_vertical"
            android:layout_row="4"
            android:layout_column="0"
            android:gravity="center_vertical" />

        <com.wealdtech.android.DateView
            android:id="@+id/pay_manual_dob"
            android:layout_row="4"
            android:layout_column="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="fill_horizontal" />

        <TextView
            android:id="@+id/pay_manual_nationality_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nationality"
            android:layout_gravity="end|center_vertical"
            android:layout_row="5"
            android:layout_column="0"
            android:gravity="center_vertical" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/pay_manual_nationality"
            android:layout_row="5"
            android:layout_column="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="fill_horizontal"
            android:singleLine="false" />

        <TextView
            android:id="@+id/pay_manual_residence_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Country of residence"
            android:layout_gravity="end|center_vertical"
            android:layout_row="6"
            android:layout_column="0"
            android:gravity="center_vertical" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/pay_manual_residence"
            android:layout_row="6"
            android:layout_column="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="fill_horizontal"
            android:singleLine="false" />

        <TextView
            android:id="@+id/pay_manual_card_header"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Card details"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_height="wrap_content" />

        <com.devmarvel.creditcardentry.library.CreditCardForm
            android:id="@+id/credit_card_form"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:include_helper="false"
            app:include_zip="false" />

        <Button
            android:id="@+id/pay_manual_scan_button"
            android:layout_gravity="fill_horizontal"
            android:text="@string/pay_manual_scan_label"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnSpan="2" />
    </GridLayout>

</ScrollView>